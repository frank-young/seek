extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 姓名
            th 手机
            th 邮箱
            th 注册时间
            th 删除
        tbody
          each item in users
           tr(class="item-id-#{item._id}")
            td #{item.name}
            td #{item.phone}
            td #{item.email}
            td #{moment(item.meta.updateAt).format('YYYY-MM-DD')}
            td
              button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
