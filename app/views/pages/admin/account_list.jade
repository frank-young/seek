include ./includes/header
include ./includes/nav

.container.mt-60
  .row
    .col-xs-12.col-md-6.col-md-offset-3
      div#f-alert.alert.alert-danger(role="alert")
  .row.mt-20
    .col-md-12
      a.btn.btn-success.btn-lg.btn-block(href='/manager/account/add')
        span.glyphicon.glyphicon-plus
        |  新建会计账号  
  .shadow-box
    each admin in admins
      .row.item(id="#{admin._id}")
        .col-xs-8
          .a-name #{admin.name}               
        .col-xs-4
          button#btn-del.btn.btn-danger.btn-block(type='button',data-id="#{admin._id}")
            span.glyphicon.glyphicon-trash
            |  删除
include ./includes/footer_i
script(src="../../backend/js/admin/account_list.js")